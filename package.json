{
    "name": "trade-monitor-webhook",
    "version": "1.0.0",
    "description": "Servicio de monitoreo de trades en tiempo real con webhooks",
    "main": "src/app.js",
    "type": "module",
    "scripts": {
      "start": "node src/app.js",
      "dev": "nodemon src/app.js",
      "test": "node src/app.js --test",
      "docker:build": "docker build -t trade-monitor .",
      "docker:run": "docker-compose up -d",
      "docker:stop": "docker-compose down",
      "logs": "tail -f logs/trade-monitor.log"
    },
    "keywords": [
      "trade",
      "monitoring",
      "webhook",
      "realtime"
    ],
    "author": "Tu Nombre",
    "license": "MIT",
    "dependencies": {
        "axios": "^1.6.0",
        "dotenv": "^16.3.1",
        "winston": "^3.11.0",
        "node-cron": "^3.0.3",
        "express": "^4.18.2",
        "sqlite3": "^5.1.6",
        "sqlite": "^5.1.1"
    },
    "devDependencies": {
      "nodemon": "^3.0.1"
    }
  }